# TrakNor CMMS Frontend - Environment Variables Example
# Copy this file to .env and adjust values as needed

# =============================================================================
# API Configuration
# =============================================================================

# API Backend URL (used in production)
# In DEV mode, Vite proxy handles routing to backend
VITE_API_URL=http://umc.localhost:8000/api

# (Optional) API URL Pattern for multi-tenant production
# Use {tenant} placeholder - will be replaced with actual tenant slug
# Example: https://{tenant}.api.traknor.com/api
# VITE_API_URL_PATTERN=https://{tenant}.api.traknor.com/api

# Default tenant slug (used when not detectable from hostname)
VITE_DEFAULT_TENANT=umc

# =============================================================================
# App Configuration
# =============================================================================
VITE_APP_NAME=TrakNor CMMS
VITE_APP_VERSION=1.0.0

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# ðŸ”’ SECURITY NOTICE
# =============================================================================
# DO NOT expose API keys in frontend (bundled in browser)
# Configure email service on backend with server-side variables
# See: traksense-backend/.env.example for RESEND_API_KEY

# =============================================================================
# Support Contact
# =============================================================================
VITE_SUPPORT_EMAIL=suporte@traknor.com
