# Development environment variables for performance optimization
# Copy this to .env.local for local development

# Enable fast refresh for React components
VITE_DEV_FAST_REFRESH=true

# Skip environment validation in development for faster startup
VITE_DEV_SKIP_ENV_VALIDATION=true

# Increase Node.js memory limit for large builds
NODE_OPTIONS=--max-old-space-size=4096

# Enable Vite's built-in optimizations
VITE_LEGACY_DEP_OPTIMIZER=false

# Disable source map generation in development for faster builds (optional)
# VITE_DEV_SOURCEMAP=false